# source 'https://gems.ruby-china.com'
source "http://mirrors.tuna.tsinghua.edu.cn/rubygems"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '3.0.0'
gem 'rails',                   '6.0.5'   # Optimize for programmer happiness.

gem 'active_link_to',          '1.0.5'   # Use active_link_to helper.
gem 'acts-as-taggable-on',     '9.0.1'   # Manage tags.
gem 'api-pagination',          '5.0.0'   # Paginate API calls.
gem 'autoprefixer-rails',      '10.4.13.0'   # Add vendor prefixes to CSS rules
gem 'aws-sdk-s3',              '1.134.0'  # Interact with AWS S3.
gem 'bcrypt',                  '3.1.19'  # Use ActiveModel has_secure_password.
gem 'bootstrap-sass',          '3.4.1'   # Add page style.
gem 'bootstrap-will_paginate', '1.0.0'   # Paginate with Boostrap styling.
gem 'cancancan',               '3.5.0'   # Centralize authorization.
gem 'codemirror-rails',        '5.16.0'  # Add a code editor to views.
gem 'coffee-rails',            '5.0.0'   # Use default CoffeeScript adapter.
gem 'coffee-script-source',    '1.12.2'   # Enable CoffeeScript.
gem 'exception_notification',  '4.5.0'   # Get notified about exceptions.
gem 'ffi',                     '1.15.5'  # Load dynamic libraries.
gem 'httparty',                '0.21.0'  # Send HTTP requests.
gem 'ipaddress',               '0.8.3'   # Validate IP addresses.
gem 'jbuilder',                '2.11.5'   # Build JSON APIs.
# gem 'jquery-fileupload-rails', '1.0.0'   # Upload files to Amason S3.
gem 'jquery-rails',            '4.6.0'   # Use jQuery as the JavaScript library.
gem 'jquery-ui-rails',         '6.0.1'   # Extend jQuery library.
gem 'jquery-datatables',       '1.10.20' # Use jQuery datatables plug-in.
gem 'kaminari',                '1.2.2'   # Used for pagination.
gem 'loofah',                  '2.21.3'   # Manipulate and transform HTML/XML.
gem 'mysql2',                  '0.5.5'   # Use MySQL database.
gem 'newrelic_rpm',            '9.4.2' # Manage performance.
gem 'nokogiri',                '1.15.4'  # Parse HTML#, XML#, SAX#, and Reader.
gem 'puma',                    '6.3.1'  # Serve the app.
gem 'rails-html-sanitizer',    '1.6.0'   # Sanitize HTML.
gem 'rake',                    '13.0.6'  # Use rake build utility.
gem 'rack',                    '2.2.8'   # Use rack web service utility.
gem 'rubocop',                 '1.56.1'  # Check style compliance.
gem 'ruby-kafka',              '1.5.0'   # Interact with Kafka message bus.
gem 's3_direct_upload',        '0.1.7'   # Upload files to Amazon S3.
gem 'sass-rails',              '6.0.0'   # Use SCSS for stylesheets.
gem 'silencer',                '2.0.0'   # Silence logging events.
gem 'thor',                    '1.2.2'  # Build command line interfaces.
gem 'turbolinks',              '5.2.1'   # Navigate your web app faster.

gem 'uglifier',                '4.2.0'  # Compress JavaScript assets.
gem 'validates_hostname',      '1.0.13'   # Validate hostnames.
gem 'validate_url',            '1.0.15'   # Validate URLs.
gem 'will_paginate',           '4.0.0'   # Paginate.

# Use gems in development environment.
group :development do
  gem 'brakeman',              '6.0.1' # Scan app for vulnerabilities.
  gem 'listen',                '3.8.0' # Get notified on file modification.
  gem 'spring',                '4.1.1' # Run app in the background.
  gem 'spring-watcher-listen', '2.1.0' # Make spring watch files.
#  gem 'web-console' # Access an IRB console from the browser.
end

# Use gems in development and test environments.
group :development, :test do
  gem 'byebug', platform: :mri # Debug code.
end

